<p id="notice"><%= notice %></p>

<h1>Skills</h1>

<table>
  <thead>
    <tr>
      <th>Account</th>
      <th>Skill</th>
      <th>Routing weight</th>
      <th>Threshold</th>
      <th>Self administered</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.account_id %></td>
        <td><%= skill.skill %></td>
        <td><%= skill.routing_weight %></td>
        <td><%= skill.threshold %></td>
        <td><%= skill.self_administered %></td>
        <td><%= link_to 'Show', skill %></td>
        <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
        <td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

